---
import SiteLayout from '../layouts/SiteLayout.astro';
import Converter from '../components/Converter.tsx';
import '../styles/converter.css';
import { units } from '../data/units';

export async function getStaticPaths() {
  const paths = [];
  for (const [category, unitList] of Object.entries(units)) {
    for (const from of unitList) {
      for (const to of unitList) {
        if (from !== to) {
          paths.push({ params: { from, to } });
        }
      }
    }
  }
  return paths;
}

const { from, to } = Astro.params;
const title = `Van ${from} naar ${to} omrekenen | van-naar.nl`;
const desc  = `Reken ${from} om naar ${to} snel en eenvoudig.`;
---

<SiteLayout {title} {desc}>
  <main class="container">
    <div class="ad">Advertentie-blok (728×90 / 300×250)</div>

    <h1 style="margin:32px 0 24px">{from} naar {to} omrekenen</h1>
    <Converter initialFrom={from} initialTo={to} />

    <section>
      <h2 style="margin:48px 0 16px;font-size:24px">Populaire conversies</h2>
      <div class="grid">
        <a class="card" href="/km-naar-mm/"><h4>Kilometer → Millimeter</h4><p>10 km = 10 000 000 mm</p></a>
        <a class="card" href="/mm-naar-cm/"><h4>Millimeter → Centimeter</h4><p>10 mm = 1 cm</p></a>
        <a class="card" href="/c-naar-f/"><h4>Celsius → Fahrenheit</h4><p>1 °C = 33,8 °F</p></a>
        <a class="card" href="/kg-naar-g/"><h4>Kilogram → Gram</h4><p>1 kg = 1000 g</p></a>
      </div>
    </section>

    <div class="ad">Advertentie-blok (728×90 / 300×250)</div>
  </main>
</SiteLayout>