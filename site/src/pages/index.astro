---
import Converter from '../components/Converter.tsx';
const title = 'Eenheden omrekenen – van-naar.nl';
const desc  = 'Kies een categorie, selecteer eenheden en reken direct waarden om.';
---

<html lang="nl">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={desc} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>
  <body style="font-family:sans-serif;max-width:600px;margin:2rem auto">
    <h1>{title}</h1>
    <p>{desc}</p>

    <Converter client:load />

    <p style="margin-top:1rem">
      Deze homepage werkt; SEO-subpagina’s bouwen we in de volgende stap.
    </p>
  </body>
</html>
