---
import Converter from '../components/Converter.astro';
const title = 'Eenheden omrekenen — van-naar.nl';
const description = 'Reken eenvoudig waarden om, bijvoorbeeld van kilometer naar millimeter of van °C naar °F.';
---
<html lang="nl">
  <head>
    <meta charset="utf-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body>
    <h1>{title}</h1>
    <p>{description}</p>

    <Converter category="lengte" />

    <section>
      <h2>Veelgebruikte omzettingen</h2>
      <ul>
        <li><a href="/km-naar-mm/">km → mm</a></li>
        <li><a href="/mm-naar-cm/">mm → cm</a></li>
        <li><a href="/kg-naar-g/">kg → g</a></li>
      </ul>
    </section>
  </body>
</html>
